#!/bin/bash
set -euo pipefail

if [ -z "${OMAKUB_PATH:-}" ]; then
  echo "OMAKUB_PATH is not set. Exiting."
  exit 1
fi

if [ ! -f "$OMAKUB_PATH/bin/omakub-sub/header.sh" ]; then
  echo "header.sh not found in $OMAKUB_PATH/bin/omakub-sub"
  exit 1
fi
if [ ! -f "$OMAKUB_PATH/bin/omakub-sub/menu.sh" ]; then
  echo "menu.sh not found in $OMAKUB_PATH/bin/omakub-sub"
  exit 1
fi

source "$OMAKUB_PATH/install/check-version.sh"
source $OMAKUB_PATH/bin/omakub-sub/header.sh
source $OMAKUB_PATH/bin/omakub-sub/menu.sh
